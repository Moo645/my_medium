<section class="comment-editor">
<% if user_signed_in? %>
  <%= form_with model: comment, url: story_comments_path(story), remote: true do |f| %>
    <%= f.text_area :content, rows: 8, class: "textarea is-small" %>
    <%= f.button '送出', class: "button is-primary is-fullwidth" %>
  <% end %>
  <% else %>
    <p> Want to comment? </p>
    <%= link_to 'sign in', new_user_session_path, class: 'button has-border has-text-primary' %>
    <%= link_to 'sign up', new_user_registration_path, class: 'button has-border has-text-info' %>
  <% end %>
</section>
