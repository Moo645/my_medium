<section class="comment-list">
  <article class="comment">
    <span class="profile">
      <%= avatar(comment.user, size: 50) %>
      <span class="username"><%= link_to "@#{comment.user.username}", user_page_path(comment.user.username) %></span>
    </span>
    <hr>
      <%= simple_format(comment.content) %>
  </article>
</section>
